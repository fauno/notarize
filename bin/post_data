set -e

# debuguear si exportamos la variable DEBUG con cualquier cosa
test ! -z $DEBUG && set -x

key=$1; shift
echo "$@" | gpg --clearsign >data.asc
curl --data key=$key --data-urlencode value@data.asc http://localhost:4567/
